= form_for @weed do |f|
	= f.text_field :name, class: 'form-control', placeholder: 'Name'
	%br
	= f.text_area :description, class: 'form-control', placeholder: 'Description'
	%br
	= f.select :strength, options_for_strength
	%br
	%br
	= f.number_field :thc, class: 'form-control', placeholder: 'THC content in mg'
	%br
	= f.select :mood, options_for_mood
	%br
	%br
	= f.number_field :price, class: 'form-control', placeholder: 'Price (in dollars)'
	%br
	= f.text_field :ingredients, class: 'form-control', placeholder: 'Ingredients'
	%br
	= f.text_field :allergies, class: 'form-control', placeholder: 'Allergy warning'
	%br
	%br
	.col-md-6.col-md-offset-3
		= f.submit class: 'form-control btn btn-success'